    function addComment($comment) {
	$timestamp = time(); // Time in microseconds since 1970
	$myComment = new Comment($this->user, $comment, $timestamp);
	$serialComment = serialize($myComment);
	$this->db->addComment($timestamp, $serialComment);
    }
